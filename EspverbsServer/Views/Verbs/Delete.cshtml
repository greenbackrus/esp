@model espverbs.Domain.Words.Verbs.Verb
@using Server.Helpers

@{
    ViewData["Title"] = "Delete";
}

<h1>@ResourceHelper.GetString("DeleteCaption")</h1>

<h3>@ResourceHelper.GetString("AreYouSureQuestion")</h3>
<div>
    <h4>@ResourceHelper.GetString("VerbCaption")</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Root)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Root)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ending)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ending)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ConjugationType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ConjugationType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Word)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Word)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value=@ResourceHelper.GetString("DeleteButton") class="btn btn-danger" /> |
        <a asp-action="Index">@ResourceHelper.GetString("BackButton")</a>
    </form>
</div>
